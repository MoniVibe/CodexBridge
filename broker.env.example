# Telegram broker config

TG_BOT_TOKEN=
TG_CHAT_ID=
TG_SECRET=

# Agent dispatch
AGENT_SECRET=
AGENT_TIMEOUT_SEC=7200
AGENT_CONNECT_TIMEOUT_SEC=3

# Per-machine default (recommended): point at the local agent only.
# You can also omit TARGET_* entirely; broker will default to TARGET_local=127.0.0.1:<LISTEN_PORT>.
TARGET_pc=127.0.0.1:8765
DEFAULT_TARGET=pc

# Optional multi-target setup (single broker controlling multiple machines):
# TARGET_lap=25.29.69.246:8765

# Bot settings
POLL_TIMEOUT_SEC=20
MAX_OUTPUT_CHARS=3500
BROKER_EXIT_ON_409=1
BROKER_EXIT_ON_409_THRESHOLD=3

# Voice-to-text (optional)
# STT_CMD should print the transcript to stdout. {input} will be replaced with the audio file path.
# Example using local whisper.cpp:
# STT_CMD=whisper.exe -m C:\models\ggml-base.en.bin -f {input} -otxt -of C:\dev\unity_clean\CodexBridge\logs\stt
STT_CMD=
STT_TIMEOUT_SEC=120
VOICE_TARGET=pc


